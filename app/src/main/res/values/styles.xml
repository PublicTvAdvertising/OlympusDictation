<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Black.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="AppBase" parent="Theme.AppCompat.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="PrefsTheme" parent="@android:style/Theme.Black">
        <item name="android:textColor">#FFFFFF</item>




                <item name="android:listViewStyle">@style/listViewPrefs</item>

    </style>
    <style name="checkboxTheme" >
        <item name="colorAccent">@color/fab_color</item>
        <item name="android:colorControlNormal">@color/fab_color</item>
        <item name="android:colorControlActivated">@color/fab_color</item>

    </style>
    
    <style name="listViewPrefs" parent="@android:style/Widget.ListView.White">
       <!--  <item name="android:background">@drawable/relativeselector</item> -->
        <item name="android:cacheColorHint">#000000</item>

    </style>
    
    <style name="RecipientEditTextView" >
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
        
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:dropDownVerticalOffset">-6dip</item>
        <item name="android:dropDownHorizontalOffset">-16dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>
</resources>