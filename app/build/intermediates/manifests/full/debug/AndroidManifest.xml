<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.olympus.dmmobile"
    android:versionCode="13"
    android:versionName="1.2.4" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="false" />
    <uses-feature android:name="android.hardware.microphone" />
    <uses-feature android:name="android.hardware.screen.portrait" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.ACTION_NOTIFICATION_POLICY_ACCESS_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <application
        android:name="com.olympus.dmmobile.DMApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.olympus.dmmobile.SplashscreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.olympus.dmmobile.DMActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.olympus.dmmobile.settings.SettingsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black" />
        <activity
            android:name="com.olympus.dmmobile.DictationPropertyActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <service
            android:name="com.olympus.dmmobile.Errorservice"
            android:label="@string/app_name" />

        <activity
            android:name="com.olympus.dmmobile.flashair.FlashAirMain"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.olympus.dmmobile.flashair.FlashAirBrowser"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.olympus.dmmobile.settings.WorktypeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PrefsTheme" />
        <activity
            android:name="com.olympus.dmmobile.settings.EmailOptionsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PrefsTheme" />
        <activity
            android:name="com.olympus.dmmobile.settings.ServerOptionsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PrefsTheme" />
        <activity
            android:name="com.olympus.dmmobile.settings.LegalNoticesActivity"
            android:label="@string/legal_notices_title"
            android:screenOrientation="portrait"
            android:theme="@style/PrefsTheme" />
        <activity
            android:name="com.olympus.dmmobile.settings.LegalnoticeActivity"
            android:label="@string/legal_notices_title"
            android:screenOrientation="portrait"
            android:theme="@style/PrefsTheme" />
        <activity
            android:name="com.olympus.dmmobile.settings.ThirdpartySoftware"
            android:screenOrientation="portrait"
            android:theme="@style/PrefsTheme" />
        <activity
            android:name="com.olympus.dmmobile.recorder.DictateActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.olympus.dmmobile.settings.TrademarkActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PrefsTheme" />
        <activity
            android:name="com.olympus.dmmobile.settings.NoSdcard"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.olympus.dmmobile.settings.SplashActivity"
            android:screenOrientation="portrait" />

        <service android:name="com.olympus.dmmobile.ConvertAndUploadService" />

        <activity
            android:name="com.olympus.dmmobile.CustomDialog"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.olympus.dmmobile.CustomLaunchDialog"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.olympus.dmmobile.settings.RecipientActivity"
            android:label="@string/recipient_title"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Light" />
        <activity
            android:name="com.olympus.dmmobile.settings.AddRecipientActivity"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Light" />
        <activity
            android:name="com.olympus.dmmobile.settings.PrivacyPolicyActivity"
            android:label="@string/privacy_policy_title"
            android:theme="@android:style/Theme.Black" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.0.0" />
    </application>

</manifest>